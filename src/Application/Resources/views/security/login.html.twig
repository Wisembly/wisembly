{% extends 'layout.html.twig' %}

{% block page_css %}
    <link rel="stylesheet" href="../less/login.css">
{% endblock %}


{% block content %}

    <header class="main-header container">
        <h1><small>Restricted access </small> Please log in</h1>
    </header>


    <div class="container">
        <div class="bread-crumb">
            <a href="/">Home</a> > Login
        </div>
        <div class="row content-wrapper">
            <div class="main-content contact">
                <div class="row">
                    <div class="span12">
                        <h3>Who are you ?</h3>
                        <form action="login" method="post">
							<label>Username :<input type="text" name="_username" /></label><br />
							<label>Password : <input type="password" name="_password" /></label><br />
							<input type="submit" value="Let's rock" class="btn btn-large btn-primary" />
						</form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
