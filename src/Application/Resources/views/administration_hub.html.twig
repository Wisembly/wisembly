{% extends 'layout.html.twig' %}

{% block page_css %}
    <link rel="stylesheet" href="../less/administration_hub.css">
{% endblock %}

{% block filters %}{% endblock %}
{% block alerts %}{% endblock %}


{% block meta_admin %}{% endblock %}

{% block meta_title         app.meta_admin[0].title          %}
{% block meta_description   app.meta_admin[0].description    %}
{% block meta_keywords      app.meta_admin[0].keywords       %}


{% block content %}

    <header class="main-header container">
        <h1><small>Manage your website</small> Administration Hub</h1>
    </header>

    <div class="container">
        <div class="bread-crumb">
            <a class="catcher btn btn-small" href="{{path('logout')}}">Logout</a>
            <a href="/">Home</a> > Administration Hub
        </div>
        <div class="row content-wrapper">
            <div class="main-content contact">
                <div class="row hub-row">
                    <div class="span12">
                        <h3>Here is what you can manage : </h3>
                        <ul class="unstyled">
                            {% for table in tables %}
                                <li>
                                    <strong>{{ table | title }}</strong>
                                    <a href="{{ path('administration', {'table' : table}) }}"   title="{{ table | title }}" class="btn btn-primary">  Let's go    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}