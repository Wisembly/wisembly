{% extends 'layout.html.twig' %}

{% block page_css %}
    <link rel="stylesheet" href="{{ asset("less/contact.css") }}">
{% endblock %}

{% block page_scripts %}
    <script src="{{ asset("js/contact.js") }}" type="text/javascript" charset="utf-8" async></script>
{% endblock %}

{% block alerts %}{% endblock %}
{% block filters %}{% endblock %}

{% block meta_contact %}{% endblock %}

{% block meta_title         app.meta_contact[0].title          %}
{% block meta_description   app.meta_contact[0].description    %}
{% block meta_keywords      app.meta_contact[0].keywords       %}


{% block content %}
    <header class="main-header container">
        <h1>{{ 'contact_head' | trans | raw }}</h1>
    </header>

    <div class="container">
        <div class="bread-crumb">
            <a class="catcher" href="{{ path('cases') }}">{{ 'contact_catcher' | trans }}</a>
            <a href="{{ path('index') }}">{{ 'home' | trans }}</a> > {{ 'contact' | trans }}
        </div>
        <div class="row content-wrapper">
            <div class="main-content contact">
                <h2>{{ 'contact_us_titre' | trans }}</h2>
                <p class="intro">
                    {{ 'contact_us_intro' | trans | raw }}
                </p>
                <div class="row-fluid">
                    <div class="span4">
                        <h3>{{ 'contact_contact_us' | trans }}</h3>
                        <span class="label"><i class="icon-envelope"></i> {{ 'contact_by_email' | trans }}</span><br><br>
                        {% if 'success' in app.request.query | keys and app.request.query.get('success') == 1 %}
                            <span class="alert-block"><strong>{{ 'contact_mail_sent' | trans | raw }}</strong></span><br/><br/>
                        {% else %}
                        {% if 'success' in app.request.query | keys %}
                            <span class="alert-block"><strong>{{ 'contact_mail_fail' | trans | raw }}</strong></span><br/><br/>
                        {% endif %}
                            <form id="send_contact_email" action="{{ path('contact_send_mail') }}" method="post">
                                {{ form_widget(app.contact_form_view) }}
                                <input type="submit" class="btn btn-large btn-primary" value="{{ 'contact_send' | trans }}" />
                            </form>
                        {% endif %}
                        <p>
                            {{ 'contact_or' | trans }} <a href="mailto:contact@wisembly.com?subject=message de wisembly.com">contact@wisembly.com</a>
                        </p>
                        <br><br>
                        <p><span class="label"><i class="icon-phone"></i> {{ 'contact_by_phone' | trans }}</span></p>
                        <p>{{ app['phone_number'] }}</p>
                    </div>

                    <div class="span8 maps">
                        <h3>{{ 'contact_our_addresses' | trans }}</h3>
                        <address>
                            <a href="#" title="Voir sur la carte" class="btn btn-small toggle-map" data-target="map-siege">
                                <i class="icon-map-marker icon-large"></i> {{ 'contact_see_on_map' | trans }}
                            </a>
                            <span class="label"><i class="icon-map-marker"></i> {{ 'contact_headquarters' | trans }}</span><br>
                            73 Boulevard Saint-Germain <br>
                            75005 Paris
                        </address>
                        <address>
                            <a href="#" title="Voir sur la carte" class="btn btn-small toggle-map active" data-target="map-rd">
                                <i class="icon-map-marker icon-large"></i> {{ 'contact_see_on_map' | trans }}
                            </a>
                            <span class="label"><i class="icon-map-marker"></i> {{ 'contact_offices' | trans }}</span><br>
                            10 rue Thérèse <br>
                            75001 Paris
                        </address>
                        <iframe id="map-siege" width="610" height="370" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.fr/maps?f=q&amp;source=s_q&amp;hl=fr&amp;geocode=&amp;q=73+Boulevard+Saint-Germain,+Paris&amp;aq=0&amp;oq=73+boulevard+sa,+Paris&amp;sll=48.866218,2.33553&amp;sspn=0.012125,0.033023&amp;ie=UTF8&amp;hq=&amp;hnear=73+Boulevard+Saint-Germain,+75005+Paris,+%C3%8Ele-de-France&amp;t=m&amp;ll=48.850992,2.34498&amp;spn=0.020897,0.031672&amp;z=14&amp;iwloc=near&amp;output=embed"></iframe>
                        <iframe id="map-rd" width="610" height="370" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.fr/maps?f=q&amp;source=s_q&amp;hl=fr&amp;geocode=&amp;q=10+Rue+Th%C3%A9r%C3%A8se,+Paris&amp;aq=0&amp;oq=10+rue+th%C3%A9r%C3%A8se&amp;sll=48.680793,2.502588&amp;sspn=3.115535,8.453979&amp;ie=UTF8&amp;hq=&amp;hnear=10+Rue+Th%C3%A9r%C3%A8se,+75001+Paris,+%C3%8Ele-de-France&amp;t=m&amp;ll=48.866239,2.335539&amp;spn=0.020891,0.031672&amp;z=14&amp;iwloc=near&amp;output=embed"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
